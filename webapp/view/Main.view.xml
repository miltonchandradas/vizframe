<mvc:View controllerName="com.sap.vizframe.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:commons="sap.suite.ui.commons"
    xmlns:layout="sap.ui.layout"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data"
    xmlns:viz="sap.viz.ui5.controls">
    <layout:VerticalLayout width="100%">
        <VBox fitContainer="true" renderType="Bare">
            <commons:ChartContainer id="chartContainer" showFullScreen="true" showPersonalization="false" autoAdjustHeight="false" personalizationPress="attachPersonalizationPress" contentChange="attachContentChange" title="Salary Comparison">
                <commons:content>
                    <commons:ChartContainerContent icon="sap-icon://bar-chart" title="VizFrame Reference Chart">
                        <commons:content>
                            <viz:VizFrame id="vizFrameBar" height="150px" vizType="stacked_bar" uiConfig="{applicationSet:'fiori'}"></viz:VizFrame>
                        </commons:content>
                    </commons:ChartContainerContent>
                    <commons:ChartContainerContent icon="sap-icon://table-view" title="Table">
                        <commons:content>
                            <Table id="tableData" items="{tableModel>/jobDetails}">
                                <columns>
                                    <Column demandPopin="true">
                                        <Label design="Bold" text="Position"/>
                                    </Column>
                                    <Column demandPopin="true">
                                        <Label design="Bold" text="Compensation"/>
                                    </Column>
                                    <Column demandPopin="true">
                                        <Label design="Bold" text="Min Range"/>
                                    </Column>
                                    <Column demandPopin="true">
                                        <Label design="Bold" text="Current"/>
                                    </Column>
                                    <Column demandPopin="true">
                                        <Label design="Bold" text="Recent Hires"/>
                                    </Column>
                                    <Column demandPopin="true">
                                        <Label design="Bold" text="Reference Point"/>
                                    </Column>
                                    <Column demandPopin="true">
                                        <Label design="Bold" text="Max Range"/>
                                    </Column>
                                </columns>
                                <ColumnListItem press="">
                                    <Text text="{tableModel>position}"></Text>
                                    <Text text="{tableModel>compensation}"></Text>
                                    <Text text="{tableModel>minRange}"></Text>
                                    <Text text="{tableModel>current}"></Text>
                                    <Text text="{tableModel>recentHires}"></Text>
                                    <Text text="{tableModel>referencePoint}"></Text>
                                    <Text text="{tableModel>maxRange}"></Text>
                                </ColumnListItem>
                            </Table>
                        </commons:content>
                    </commons:ChartContainerContent>
                </commons:content>
            </commons:ChartContainer>
            <commons:ChartContainer id="chartContainer2" showFullScreen="true" autoAdjustHeight="false" title="Target Job (Architect)">
                <commons:content>
                    <commons:ChartContainerContent icon="sap-icon://bar-chart" title="VizFrame Reference Chart">
                        <commons:content>
                            <viz:VizFrame id="vizFrameBar2" height="150px" vizType="bar" uiConfig="{applicationSet:'fiori'}"></viz:VizFrame>
                        </commons:content>
                    </commons:ChartContainerContent>
                    <commons:ChartContainerContent icon="sap-icon://table-view" title="Table">
                        <commons:content>
                            <Table id="tableData2" items="{tableModel2>/jobDetails}">
                                <columns>
                                    <Column demandPopin="true">
                                        <Label design="Bold" text="Position"/>
                                    </Column>
                                    <Column demandPopin="true">
                                        <Label design="Bold" text="Compensation"/>
                                    </Column>
                                    <Column demandPopin="true">
                                        <Label design="Bold" text="Min Range"/>
                                    </Column>
                                    <Column demandPopin="true">
                                        <Label design="Bold" text="Current"/>
                                    </Column>
                                    <Column demandPopin="true">
                                        <Label design="Bold" text="Recent Hires"/>
                                    </Column>
                                    <Column demandPopin="true">
                                        <Label design="Bold" text="Reference Point"/>
                                    </Column>
                                    <Column demandPopin="true">
                                        <Label design="Bold" text="Max Range"/>
                                    </Column>
                                </columns>
                                <ColumnListItem press="">
                                    <Text text="{tableModel2>position}"></Text>
                                    <Text text="{tableModel2>compensation}"></Text>
                                    <Text text="{tableModel2>minRange}"></Text>
                                    <Text text="{tableModel2>current}"></Text>
                                    <Text text="{tableModel2>recentHires}"></Text>
                                    <Text text="{tableModel2>referencePoint}"></Text>
                                    <Text text="{tableModel2>maxRange}"></Text>
                                </ColumnListItem>
                            </Table>
                        </commons:content>
                    </commons:ChartContainerContent>
                </commons:content>
            </commons:ChartContainer>
        </VBox>
        <!-- <HBox ><DateTimePicker id="dtPicker" editable="false"></DateTimePicker></HBox> -->
        <HBox >
            <Input id="myInput" liveChange=".onLiveChange"></Input>
        </HBox>

    </layout:VerticalLayout>
</mvc:View>
